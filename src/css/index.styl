body,
html {
    font: 16px/1.4 Georgia, serif;
}

.page{
    max-width:400px;
    padding: 2rem;
    margin: 0 auto;
    text-align: center;
    user-select: none;
}

.gameShuffle{
    pointer-events: none;
    opacity: 0.8;
}

h1{
    font: 2rem/1.2 Georgia, serif;
    margin-bottom: 1em;
}

.fifteen{
    width: 100%;
    padding-bottom: 100%;
    background: #e5d6f6;
    margin-bottom: 1.5rem;
    position: relative;

    .item{
        position: absolute;
        left:0;
        right: 0;
        width: 25%;
        height: 25%;
        margin: 0;
        padding: 0;
        border: 0;
        background: #000;
        color:white;
        font-size: 2rem;
        box-shadow: inset 1px 1px #e5d6f6;
        transition: all 0.2s;
        cursor: pointer;
    }

    .itemVal{
        display: flex;
        align-items: center;
        justify-content: center;
        width: 84%;
        height: 84%;
        margin: 8%;
        box-shadow: inset 0 0 0 2px #922ec5;
    }

    
}
.fifteenWon .item{
    filter: brightness(200%);
}

.button{
    color: #fff;
    background: #000;
    font: 2rem/1.2 Georgia, serif;
    border: none;
    cursor: pointer;
    padding: 0.5em 1.5em;

    &:hover{
        background: #922ec5;
    }
    &:active{
        background: #4b3058;
        cursor:wait;
    }
}

